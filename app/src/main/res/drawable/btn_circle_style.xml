<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><layer-list>
            <item><layer-list>

                    <!-- outer circle -->
                    <item><shape android:shape="oval">
                            <solid android:color="#dddddd" />
                        </shape></item>

                    <!-- inner circle -->
                    <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"><shape android:shape="oval">
                            <solid android:color="#ffffff" />
                        </shape></item>
                </layer-list></item>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp"><shape android:shape="oval">
                    <solid android:color="#dddddd" />
                </shape></item>
        </layer-list></item>
    <item android:state_enabled="false"><layer-list>
            <item><layer-list>

                    <!-- outer circle -->
                    <item><shape android:shape="oval">
                            <solid android:color="#dddddd" />
                        </shape></item>

                    <!-- inner circle -->
                    <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"><shape android:shape="oval">
                            <solid android:color="#ffffff" />
                        </shape></item>
                </layer-list></item>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp"><shape android:shape="oval">
                    <solid android:color="#dddddd" />
                </shape></item>
        </layer-list></item>
    <item><layer-list>
            <item><layer-list>

                    <!-- outer circle -->
                    <item><shape android:shape="oval">
                            <solid android:color="#90FC5346" />
                        </shape></item>

                    <!-- inner circle -->
                    <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"><shape android:shape="oval">
                            <solid android:color="#ffffff" />
                        </shape></item>
                </layer-list></item>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp"><shape android:shape="oval">
                    <solid android:color="#FFFC5346" />
                </shape></item>
        </layer-list></item>

</selector>